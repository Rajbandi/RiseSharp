<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:RiseSharp.Mobile.ViewModels;assembly=RiseSharp.Mobile"
             x:Class="RiseSharp.Mobile.Views.PasswordPage" Title="{Binding Title}">

<Grid VerticalOptions="Center" >
  <Grid.RowDefinitions>
    <RowDefinition Height="*"></RowDefinition>
    <RowDefinition Height="Auto"></RowDefinition>
    <RowDefinition Height="Auto"></RowDefinition>
    <RowDefinition Height="Auto"></RowDefinition>
  </Grid.RowDefinitions>
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="*"></ColumnDefinition>
  </Grid.ColumnDefinitions>
  <Image Grid.Row="0" Grid.Column="0" Source="riselogo.png" Aspect="AspectFit" HorizontalOptions="Center" BackgroundColor="White"></Image>

  <Label Grid.Row="1" Grid.Column="0"  Text="Enter Password" HorizontalOptions="Center"/>

  <Entry Grid.Row="2" Grid.Column="0"  x:Name="PasswordTxt"  HorizontalOptions="CenterAndExpand" IsPassword ="True" Text="{Binding Password, Mode=TwoWay}" Placeholder="Enter Password"  ></Entry>

  <Button  Grid.Row="3" Grid.Column="0"  x:Name="OpenWallet" HorizontalOptions="Center" Text="Open Wallet" Command="{Binding VerifyCommand}" ></Button>

</Grid>
 
</ContentPage>