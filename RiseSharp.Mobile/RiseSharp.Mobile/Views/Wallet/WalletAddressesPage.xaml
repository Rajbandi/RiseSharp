<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RiseSharp.Mobile.Views.Wallet.WalletAddressesPage" Title="{Binding Title}">
    <ListView x:Name="WalletAddressesList" ItemsSource="{Binding Addresses}" HasUnevenRows="True"  >
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <ViewCell.ContextActions>
                 <MenuItem Text="Refresh"></MenuItem>
              <MenuItem 
                 Text="Send" />
              
              <MenuItem 
              Text="Edit" />
           <MenuItem Text="Delete" IsDestructive="True" ></MenuItem>
            </ViewCell.ContextActions>
            <Grid VerticalOptions="FillAndExpand" Padding="10"  >
            <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" >
              <Label  Text="{Binding Name}" FontAttributes="Bold" FontSize="20" />
              <Label Text="{Binding Address}" FontAttributes="Bold" FontSize="20"/>
             <Label Text="{Binding Balance}" FontAttributes="Bold" FontSize="20"/> 
            </StackLayout>
            </Grid>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
</ContentPage>